{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictFunctionTypes": false,
    "types": ["jest", "node", "htmlparser2"]
  },
  "include": ["src/**/*.ts", "tests/**/*.vue", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
